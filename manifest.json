{
  "manifest_version": 3,
  "version": "2.0.0",
  "name": "Expand Image Formats",
  "description": "Expand Image Formats in Google Docs/Sheets/Slides. Support Format:'.webp','.bmp','.svg','.avif'. Previous name: Allow WebP",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/*"
      ],
      "js": ["lib/libheif-bundle.js", "content.js"]
    }
  ],

  "host_permissions": [
    "https://docs.google.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html"
  }
}
